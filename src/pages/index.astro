    <div class="main-layout">
      <!-- Contenedor superior -->
      <div class="top-container">
        <Header />
      </div>

      <!-- Contenedor inferior -->
      <div class="bottom-container">
        <!-- Contenedor inferior izquierdo -->
        <div class="left-container">
          <Social />
        </div>
        <!-- Contenedor inferior derecho -->
        <div class="right-container">
          <About />
        </div>
